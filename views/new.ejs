<% include partials/header %>
<div class="ui main text container segment">

<h1>Create a new blog</h1>

<form action="/blogs" method="POST">
    <div class="ui form">
        <div class="field">
            <label for="title">Title:</label>
            <input type="text" id="title" placeholder="Enter title" name="blog[title]" required>  
        </div>
        <div class="field">
            <label for="img">Image URL:</label>
            <input type="text" id="img" placeholder="Enter URL" name="blog[img]" required>            
        </div>
        <div class="field">
            <label for="description">Blog text:</label>
            <textarea  id="description" placeholder="Enter text" name="blog[body]" required></textarea>    
        </div>
        <button type="submit" class="ui inverted blue button">Create New Blog</button>
    </div>
</form>
</div>

<% include partials/footer %>
