<% include partials/header %>
<div class="ui main text container segment">
    <% blogs.forEach((blog) => { %>
        <div class="blog">
            <h1><%= blog.title %></h1>
            <img class="ui centered rounded image" src="<%= blog.img %>">
            <p><%= blog.body.substring(0,200) %>...</p>
            <a href="/blogs/<%= blog._id %>" class="ui inverted purple button">Read</a>      
        </div>
    <% }) %>
</div>
<% include partials/footer %>
