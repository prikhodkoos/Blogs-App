<% include partials/header %>
<div class="ui main text container segment">

    <form action="/blogs/<%= editBlog._id %>?_method=PUT" method="POST">
        <div class="ui form">
            <div class="field">
                <label for="title">Title:</label>
                <input type="text" id="title" placeholder="Enter title" name="blog[title]" value="<%= editBlog.title %>" required>  
            </div>
            <div class="field">
                <label for="img">Image URL:</label>
                <input type="text" id="img" placeholder="Enter URL" name="blog[img]" value="<%= editBlog.img %>" required>            
            </div>
            <div class="field">
                <label for="description">Blog text:</label>
                <textarea  id="description" placeholder="Enter text" name="blog[body]" required><%= editBlog.body %></textarea>    
            </div>
            <button type="submit" class="ui inverted blue button">Save Blog</button>
        </div>
    </form>

</div>
<% include partials/footer %>